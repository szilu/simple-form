    "@types/react": "^18.0.37",
    "debounce": "^1.2.1",
    "jest": "^29.5.0",
    "react": "^18.2.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4"
